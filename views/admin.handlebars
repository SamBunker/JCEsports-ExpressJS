                <div id="deleteUser" style="display:none;">
                    {{#each userList}}
                        <form action="/admin" method="post" class="delete-form">
                            <input type="hidden" name="post_type" value="delete_user">
                            <input type="hidden" name="userEmail" value="{{email}}">
                            <input type="hidden" name="userId" value="{{id}}">

                            <div class="user-item">
                                <h3>{{username}}</h3>
                                <p>Email: {{email}}</p>
                                <p>Authentication: {{auth}}</p>
                                <p>ID: {{id}}</p>
                                
                                <button type="submit" class="btn btn-danger w-100">Delete</button>
                            </div>
                        </form>
                    {{/each}}
                </div>

                <div id="deleteCalendar" style="display:none;">
                    {{#each calEvents}}
                        <form action="/admin" method="post" class="delete-form">
                            <input type="hidden" name="post_type" value="delete_event">
                            <input type="hidden" name="eventTitle" value="{{title}}">
                            <input type="hidden" name="eventId" value="{{id}}">
                            <input type="hidden" name="eventStart" value="{{start}}">

                            <div class="user-item">
                                <h3>{{title}}</h3>
                                <p>ID: {{id}}</p>
                                <p>Start: {{start}}</p>
                                <p>End: {{end}}</p>
                                
                                <button type="submit" class="btn btn-danger w-100">Delete</button>
                            </div>
                        </form>
                    {{/each}}
                </div>

                {{!-- CREATE EVENT SECTION --}}
                <form action="/admin" method="post">
                    <input type="hidden" name="post_type" value="create_event">
                    <div id="newCalendar" style="display:none;">
                        <h1>Add Enhanced Calendar Event</h1>
                        <div class="row">
                            <div class="col-md-6">
                                <div class="column mb-3">
                                    <label for="title">Event Title: <span class="text-danger">*</span></label>
                                    <input type="text" id="title" name="title" class="form-control" required>
                                </div>
                                <div class="column mb-3">
                                    <label for="description">Description:</label>
                                    <textarea id="description" name="description" class="form-control" rows="3" placeholder="Optional event description"></textarea>
                                </div>
                                <div class="column mb-3">
                                    <label for="location">Location:</label>
                                    <input type="text" id="location" name="location" class="form-control" placeholder="Event location (optional)">
                                </div>
                            </div>
                            <div class="col-md-6">
                                <div class="column mb-3">
                                    <label for="start">Event Start Date: <span class="text-danger">*</span></label>
                                    <input type="text" id="start" name="start" class="form-control" required>
                                </div>
                                <div class="column mb-3">
                                    <label for="end">Event End Date: <span class="text-danger">*</span></label>
                                    <input type="text" id="end" name="end" class="form-control" required>
                                </div>
                                <div class="column mb-3">
                                    <label for="max_attendees">Max Attendees:</label>
                                    <input type="number" id="max_attendees" name="max_attendees" class="form-control" min="1" placeholder="Leave blank for unlimited">
                                </div>
                                <div class="column mb-3">
                                    <div class="form-check">
                                        <input type="checkbox" id="is_public" name="is_public" value="true" class="form-check-input" checked>
                                        <label for="is_public" class="form-check-label">Public Event</label>
                                        <small class="form-text text-muted">Uncheck to make this event private</small>
                                    </div>
                                </div>
                            </div>
                        </div>
                        <div class="column mb-3">
                            <label for="invitees">Send Invitations To (Optional):</label>
                            <textarea id="invitees" name="invitees" class="form-control" rows="2" placeholder="Enter email addresses separated by commas (e.g., student1@juniata.edu, student2@juniata.edu)"></textarea>
                            <small class="form-text text-muted">Leave blank to create event without sending invitations</small>
                        </div>

                        <script>
                            // Initialize Flatpickr on the #start input
                            const startPicker = flatpickr("#start", {
                                dateFormat: "Y-m-d\\TH:i:S",  // ISO format for new system
                                defaultDate: new Date(),  // Set to current date/time
                                altInput: true,  // Show readable format to user
                                altFormat: "F j, Y at h:i K",  // November 1, 2023 at 2:30 PM
                                enableTime: true,
                                time_24hr: false,
                                minuteIncrement: 15,
                                onChange: function(selectedDates, dateStr, instance) {
                                    // Update end date minimum to be at least 15 minutes after start
                                    if (selectedDates[0]) {
                                        const minEndDate = new Date(selectedDates[0].getTime() + 15*60*1000);
                                        endPicker.set('minDate', minEndDate);
                                        // If end date is before new minimum, update it
                                        if (endPicker.selectedDates[0] && endPicker.selectedDates[0] <= selectedDates[0]) {
                                            endPicker.setDate(new Date(selectedDates[0].getTime() + 60*60*1000)); // 1 hour after start
                                        }
                                    }
                                }
                            });
                            
                            // Initialize Flatpickr for the end date
                            const endPicker = flatpickr("#end", {
                                dateFormat: "Y-m-d\\TH:i:S",  // ISO format for new system
                                defaultDate: new Date(Date.now() + 2*60*60*1000),  // 2 hours from now
                                altInput: true,
                                altFormat: "F j, Y at h:i K",
                                enableTime: true,
                                time_24hr: false,
                                minuteIncrement: 15,
                                minDate: new Date(Date.now() + 15*60*1000)  // At least 15 minutes from now
                            });
                        </script>
                        <button class="btn btn-primary w-100" type="submit">Create Enhanced Event</button>
                        <small class="form-text text-muted mt-2">This event will be created with full invite/RSVP functionality and will appear immediately on the calendar.</small>
                    </div>
                </form>
            </div>
        </div>
    </div>
</body>